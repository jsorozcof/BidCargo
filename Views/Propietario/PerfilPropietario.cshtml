@model BidCargo_.Models.PropietarioInputModel
@{
    Session["urlHttp"] = HttpContext.Current.Request.Url.AbsoluteUri.Split('/')[0] + "//" + HttpContext.Current.Request.Url.AbsoluteUri.Split('/')[2];
}



<div class="site-blocks-vs inner-page-cover" style="background-image: url(/Content/images/hero_bg_3.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <br /><br />
                <h1 class="text-white font-weight-light">Con estos datos te contactamos</h1>
                <br /><br />
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("SaveFiles", "Propietario", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="container">
        <div class="card shadow-lg mb-5 mt-5 bg-white rounded p-3 ">
            <div class="row">
                <div class="col-md w-100 h-100">
                    <div class="card-title row mt-3 text-center">
                        <h1>@ViewBag.propietarioSoportesView["tipoUsuario"]</h1>
                    </div>
                    <hr />
                    <div class="card-body bg-ligth-bidcargo">
                        <div class="text-center mt-5 mb-5">
                            @*<h5 class="mb-4">
                            <b> Tipo: </b> <small> @ViewBag.propietarioSoportesView["nombreTipo"] </small>
                        </h5>*@
                            <h5 class="mb-4">
                                <b>Nombres:</b> <small> @ViewBag.propietarioSoportesView["nombres"] </small>
                            </h5>
                            <h5 class="mb-4">
                                <b>Apellidos:</b> <small> @ViewBag.propietarioSoportesView["apellidos"] </small>
                            </h5>
                            <h5 class="mb-4">
                                <b>Telefono:</b> <small> @ViewBag.propietarioSoportesView["telefono"] </small>
                            </h5>
                            <h5 class="mb-4">
                                <b>Nro identificación:</b> <small> @ViewBag.propietarioSoportesView["cedula"] </small>
                            </h5>
                            <h5 class="mb-4">
                                <b>Correo electronico:</b> <small> @ViewBag.propietarioSoportesView["correo"] </small>
                            </h5>
                        </div>
                    </div>
                </div>
                <div class="col-md w-100 h-100">
                    <div class="card-title mt-3 text-center">
                        <h1>Soportes</h1>
                    </div>
                    <hr />
                    <div class="card-body">
                        <div class="mb-4">
                            @if (@ViewBag.propietarioSoportesView["tipoUser"] == 1)
                            {
                                <div class="mt-2 mb-5">
                                    <b>Descargar certificación bancaria:</b>
                                    <a href="@Url.Action("DescargarArchivos", new { @ruta = @ViewBag.propietarioSoportesView["certificacionbancaria"] } )"
                                       data-text="Certificación bancaria class="btn btn-success btn-sm text-white rounded actiusers">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>

                                <div class="mt-2 mb-5">
                                    <b>Descargar cedula:</b>
                                    <a href="@Url.Action("DescargarArchivos", new { @ruta = @ViewBag.propietarioSoportesView["cedulaciudad"] } )"
                                       data-text="Certificación bancaria class="btn btn-success btn-sm text-white rounded actiusers">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>

                                <div class="mt-2 mb-5">
                                    <b>Descargar rut :</b>
                                    <a href="@Url.Action("DescargarArchivos", new { @ruta = @ViewBag.propietarioSoportesView["rut"] } )"
                                       data-text="Certificación bancaria class="btn btn-success btn-sm text-white rounded actiusers">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            }

                            @if (@ViewBag.propietarioSoportesView["tipoUser"] == 2)
                            {
                                <div class="mt-2 mb-5">
                                    <b>Descargar:</b>
                                    <a href="@Url.Action("DescargarArchivos", new { @ruta = @ViewBag.propietarioSoportesView["certificacionbancaria"] } )"
                                       data-text="Camara de Comercio class="btn btn-success btn-sm text-white rounded actiusers">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>

                                <div class="mt-2 mb-5">
                                    <b>Descargar Cedula de representate:</b>
                                    <a href="@Url.Action("DescargarArchivos", new { @ruta = @ViewBag.propietarioSoportesView["cedularepresentante"] } )"
                                       data-text="Camara de Comercio class="btn btn-success btn-sm text-white rounded actiusers">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>

                                <div class="mt-2 mb-5">
                                    <b>Descargar certificación bancaria</b>
                                    <a href="@Url.Action("DescargarArchivos", new { @ruta = @ViewBag.propietarioSoportesView["certificacionbancaria"] } )"
                                       data-text="Camara de Comercio class="btn btn-success btn-sm text-white rounded actiusers">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>

                                <div class="mt-2 mb-5">
                                    <b>Descargar Archivo camara de comercio:</b>
                                    <a href="@Url.Action("DescargarArchivos", new { @ruta = @ViewBag.propietarioSoportesView["nit"] } )"
                                       data-text="Camara de Comercio class="btn btn-success btn-sm text-white rounded actiusers">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>

                                <div class="mt-2 mb-5">
                                    <b>Descargar rut:</b>
                                    <a href="@Url.Action("DescargarArchivos", new { @ruta = @ViewBag.propietarioSoportesView["rut"] } )"
                                       data-text="Camara de Comercio class="btn btn-success btn-sm text-white rounded actiusers">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row form-group mt-4 me-2 mb-3">
                <div class="col-md-12 d-flex justify-content-end">
                    <input type="submit" id="guardar" value="Enviar" class="btn btn-primary py-2 px-4 text-white js-addcart-detail js-show-modal1">
                </div>
            </div>

            <div style="text-align: center;">
                @* <input type="button" value="button" class="btn btn-primary"> *@
                @* <div class="col-sm-4"> *@
                <a href=@Url.Action("MenuPropietario", "Propietario") class="btn btn-secondary text-uppercase returnls btn-sm"><i class="fas fa-backward"></i> Volver</a>
                @* <input type="button" value="Volver" class="btn btn-secondary text-uppercase returnls btn-sm" /> *@
                @* </div> *@
            </div>

        </div>

    </div>

}
