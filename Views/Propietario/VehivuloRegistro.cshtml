@model BidCargo_.Models.VehiculoViewModels

@{
    ViewBag.Title = "Registro Vehiculo"; 
}

<div class="site-blocks-vs inner-page-cover" style="background-image: url(/Content/images/hero_bg_3.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-sm-8" data-aos="fade-up" data-aos-delay="400">
                <br /><br />
                <br /><br />
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="card shadow-lg mb-5 bg-white rounded mt-5">

        <div class="card-title row text-left mt-3 mb-3">
            <div class="col-sm">
                <h1 class="ms-3">Vehiculo</h1>
            </div>
            <div class="col-sm d-flex justify-content-end">
                <a href="#"><img src="/Content/images/logoLetras.png" alt="Alternate Text" class="img-fluid" style="height: 50px" /></a>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("GuardarVehiculo", "Propietario", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken();
                <div class="row">
                            <div class="col-sm">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(models => models.Placa, "", new { @required = "", @class = "form-control", id = "floatingInput", placeholder = "Placa" })
                                    @Html.LabelFor(models => models.Placa)
                                </div>
                            </div>
                            <div class="col-sm">
                                 <div class="form-floating mb-3">
                                        @Html.DropDownListFor(models => models.TipoVehiculo, ViewBag.Lista as SelectList, "Seleccione ", new { @required = "Debes Seleccionar un tipo ",@class = "form-control form-control-sm form-select ", @id = "idTipovehiculo" })
                                        <label for="idTipovehiculo">Tipo Vehiculo</label>
                                 </div>
                            </div>

                            <div class="col-sm">
                                <div class="form-floating mb-3">

                                    @Html.TextBoxFor(models => models.PlacaRemolque, "", new { @class = "form-control", @id = "placaremolque", placeholder = "PlacaRemolque" })
                                    <label for="placaremolque">Placa del Remolque</label>
                                    <h6> coloque las placas por punto y coma </h6>
                                </div>
                                
                            </div>

                </div>


                <div class="row">

                    <div class="col-sm">
                        <div class="form-floating mb-3">

                            @Html.TextBoxFor(models => models.Marca, "", new { @required = "", @class = "form-control", id = "floatingInput", placeholder = "Marca" })
                            @Html.LabelFor(models => models.Marca)
                        </div>
                    </div>

                    <div class="col-sm">
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(models => models.Modelo, "", new { @required = "", @class = "form-control", id = "floatingInput", placeholder = "Linea" })
                            @Html.LabelFor(models => models.Modelo)
                        </div>
                    </div>

                    <div class="col-sm">
                        <div class="form-floating mb-3">

                            @Html.TextBoxFor(models => models.Linea, "", new { @required = "", @class = "form-control", id = "floatingInput", placeholder = "Modelo", type = "number" })
                            <label for="formFile" class="form-label">Año</label>


                        </div>
                    </div>

                </div>



                <div class="card-body   bg-ligth-bidcargo ">
                    <h2 class="text-black text-center">Datos Traking</h2>
                    <br />
                    <div class="row">
                        <div class="col-sm">
                            <div class="form-floating mb-3">

                                @Html.TextBoxFor(models => models.Operador, "", new { @required = "", @class = "form-control", id = "floatingInput", placeholder = "operador" })
                                @Html.LabelFor(models => models.Operador)
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="form-floating mb-3">

                                @Html.TextBoxFor(models => models.Usuario, "", new { @required = "", @class = "form-control", id = "floatingInput", placeholder = "Usuario" })
                                @Html.LabelFor(models => models.Usuario)
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="form-floating mb-3">

                                @Html.TextBoxFor(models => models.Contraseña, "", new { @required = "", @class = "form-control", id = "floatingInput", placeholder = "Contaseña" })
                                @Html.LabelFor(models => models.Contraseña)
                            </div>
                        </div>
                    </div>
                </div>



                <div class="card-body">
                    <div class="row">
                        <div class="col-sm">
                            <label for="formFile" class="form-label">Tarjeta de propiedad</label>
                            @Html.TextBoxFor(model => model.SpPropiedad, new {@required = "",  @class = "form-control", type = "file", @id = "formFileCC", accept = ".pdf" })
                            @Html.ValidationMessageFor(models => models.SpPropiedad, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-sm">
                            <label for="formFile" class="form-label">SOAT</label>
                            @Html.TextBoxFor(models => models.SpSoat, new { @required = "", @class = "form-control", type = "file", @id = "formFile", accept = ".pdf" })
                            @Html.ValidationMessageFor(models => models.SpSoat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <br />
                    <div class="row">
                        <div class="col-sm">
                            <label for="formFile" class="form-label">Tecno-mecanica</label>
                            @Html.TextBoxFor(models => models.SpMecanica, new { @required = "", @class = "form-control", type = "file", @id = "formFile2", accept = ".pdf" })
                            @Html.ValidationMessageFor(models => models.SpMecanica, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm">
                            <label for="formFile" class="form-label">Seguro todo riesgo</label>
                            @Html.TextBoxFor(models => models.SpTodoResgo, new { @required = "", @class = "form-control", type = "file", @id = "formFile3", accept = ".pdf" })
                            @Html.ValidationMessageFor(models => models.SpTodoResgo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="container text-center">
                    <button type="submit" class="btn btn-primary">Enviar</button>

                </div>




            }

        </div>
     
    </div>
 </div>
    



@section  scripts{
    @if (Session["message"] != null)
    {
        if (Session["message"].ToString() != "")
        {
            <script type="text/javascript">
                Swal.fire({
                    title: "Mensaje",
                    html: "@Session["message"].ToString()",
                    type : '@Session["type"].ToString()',
                    showConfirmButton: true,

                });
            </script>
        }
        Session.Remove("message");
        Session.Remove("type");
    }
<script>
    placaremolque.disabled = true;
    var listatipovehiculos = document.getElementById("idTipovehiculo");
    listatipovehiculos.addEventListener("change", RefreshTipoVehiculo);
    RefreshTipoVehiculo()

    function RefreshTipoVehiculo() {

        var placaremolque = document.getElementById('placaremolque');
        console.log(listatipovehiculos.value)
        if (listatipovehiculos.value) {
            if (listatipovehiculos.value == 5 || listatipovehiculos.value == 6 || listatipovehiculos.value == 7 || listatipovehiculos.value == 8 || listatipovehiculos.value == 14   )
            {
                placaremolque.disabled = false;
                if (listatipovehiculos.value == 14 )
                {
                    formFile.disabled = true;
                    formFile2.disabled = true;
                    formFile3.disabled = true;
                }
            } else
            {
                placaremolque.disabled = true;
            }
        } 
    }



</script>



}
