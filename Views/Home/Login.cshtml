@model BidCargo_.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
<div class="sufee-login d-flex align-content-center flex-wrap" style="background-image: url(/Content/images/hero_bg_1.jpg);">
    <div class="container d-flex justify-content-center">
        <div class="card card-login-bc shadow my-5">
            <div class="login-content mb-4 w-100" style="background-color:white; margin:auto; text-align:center">
                <div class="login-logo">
                    <a href="#">
                        <br>
                        <img class="align-content img-fluid" src="../Content/images/LogoBidCargo.png" alt="" />
                    </a>
                    <br>
                    <br>
                </div>
                <label>Usuario/Email</label>
                @Html.TextBoxFor(model => model.usuario, new { @class = "form-control", @required = "", @Style = "width:80%; margin:auto" })
                <br />
                <label>Contraseña</label>
                @Html.PasswordFor(model => model.contrasena, new { @class = "form-control", @required = "", @Style = "width:80%; margin:auto" })
                <br />
                <button class="btn btn-secondary btn-lg btn-block" style="width:70%; margin:auto;">INICIAR SESIÓN</button>
                <br />
                <label style="color:#007d71;text-align:center;">
                    <a href=@Url.Action("olvidoSuContrasena") style="color:#0219ba;text-align:center;">Recuperar Contraseña</a>
                </label>
                <br />
            </div>
        </div>
    </div>
</div>
}

@section  scripts{
    @if (Session["message"] != null)
    {
        if (Session["message"].ToString() != "")
        {
            <script type="text/javascript">
                Swal.fire({
                    title: "Mensaje",
                    html: "@Session["message"].ToString()",
                    type : '@Session["type"].ToString()',
                    showConfirmButton: true,
                    
                });
            </script>
        }
        Session.Remove("message");
        Session.Remove("type");
    }
}
