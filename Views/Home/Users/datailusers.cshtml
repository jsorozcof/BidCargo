@model BidCargo_.Models.UsuarioSistema

@{
    Session["urlHttp"] = HttpContext.Current.Request.Url.AbsoluteUri.Split('/')[0] + "//" + HttpContext.Current.Request.Url.AbsoluteUri.Split('/')[2];
    ViewBag.Title = "datailusers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="site-blocks-vs inner-page-cover" style="background-image: url(/Content/images/hero_bg_3.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-sm-8" data-aos="fade-up" data-aos-delay="400">
                <br /><br />
                <h1 class="text-white font-weigh text-uppercase">Resúmen de la Oferta</h1>
                <br /><br />
            </div>
        </div>
    </div>
</div>
<form action="@Url.Action("SaveUsuarioSistema")" method="post" enctype="multipart/form-data">
    <input name="profile" value="0" type="hidden" />
    <div class="site-section bg-light p-5">
        <div class="container">
            <div class="pt-5 pl-5 pr-5 bg-white">
                <div class="row">
                    <div class="col-md-12 mb-5">
                        <div class="row form-group">
                            <div class="col-md-4 form-group">
                                <label class="text-black" for="fname">Nombre</label>
                                @Html.TextBoxFor(model => model.Nombre, new { Value = @ViewBag.data["Nombre"].ToString(), @Class = "form-control form-control-sm", @required = "" })
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="text-black" for="lname">Apellido</label>
                                @Html.TextBoxFor(model => model.Apellido, new { Value = @ViewBag.data["apellidoPaterno"].ToString(), @Class = "form-control form-control-sm", @required = "" })
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="text-black" for="fname">Celular</label>
                                @Html.TextBoxFor(model => model.Celular, new { Value = @ViewBag.data["Celular"].ToString(), @Class = "form-control form-control-sm", @required = "" })
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="text-black" for="fname">Correo Electronico</label>
                                @Html.TextBoxFor(model => model.Correo, new { Value = @ViewBag.data["Correo"].ToString(), @Class = "form-control form-control-sm", @required = "" })
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="text-black" for="fname">Usuario</label>
                                @Html.TextBoxFor(model => model.Usuario, new { Value = @ViewBag.data["Usuario"].ToString(), @Class = "form-control form-control-sm", @required = "" })
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="text-black" for="message">Tipo de Empresa</label>
                                @Html.DropDownListFor(model => model.PerfilId, ViewBag.ListTypeCompany as SelectList, "",  new { Value = @ViewBag.data["PerfilId"].ToString(), @Class = "form-control form-control-sm", @required = "" })
                            </div>
