@model BidCargo_.Models.contactanos
@{
    ViewBag.Title = "Contact";
}
<div class="site-blocks-vs inner-page-cover" style="background-image: url(/Content/images/hero_bg_3.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <br /><br />
                <h1 class="text-white font-weight-light">Contáctanos</h1>
                <br /><br />
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-5">
                <div class="p-5 bg-white">
                    @using (Html.BeginForm("Contactando", "Home", FormMethod.Post))
                    {
                        <div class="row form-group">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="text-black" for="fname">Razón Social</label>
                                @Html.TextBoxFor(model => model.razonSocial, new { @required = "", @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                <label class="text-black" for="lname">Nombre de Contacto</label>
                                @Html.TextBoxFor(model => model.nombreContacto, new { @required = "", @class = "form-control" })
                            </div>
                        </div>

                        <div class="row form-group">

                            <div class="col-md-6">
                                <label class="text-black" for="email">Correo electrónico</label>
                                @Html.TextBoxFor(model => model.correoContacto, new { @required = "", @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                <label class="text-black" for="subject">Teléfono Celular</label>
                                @Html.TextBoxFor(model => model.celularContacto, new { @required = "", @class = "form-control" })
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="text-black" for="message">Escríbenos tus dudas</label>
                                @Html.TextAreaFor(model => model.comentariosContacto, new { @required = "", @class = "form-control", @cols = "30", @rows = "7" })
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Enviar Mensaje" class="btn btn-primary py-2 px-4 text-white">
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-5">

                <div class="p-4 mb-3 bg-white">
                    <p class="mb-0 font-weight-bold">Dirección</p>
                    <p class="mb-4">Carrera 11B # 99-25 (WeWork)</p>

                    <p class="mb-0 font-weight-bold">Celular</p>
                    <p class="mb-4"><a href="#">+57 3118505123</a></p>

                    <p class="mb-0 font-weight-bold">Correo electrónico</p>
                    <p class="mb-0"><a href="#">contacto@bidcargo.com.co</a></p>

                </div>

                <div class="p-4 mb-3 bg-white">
                    <h3 class="h5 text-black mb-3">Mayor Información</h3>
                    <p>Dejanos tu información básica y nosotros te contactaremos lo antes posible para solucionar tus inquietudes.</p>
                </div>

            </div>
        </div>
    </div>
</div>

@section  scripts{
    @if (Session["message"] != null)
    {
        if (Session["message"].ToString() != "")
        {
            <script type="text/javascript">
                Swal.fire({
                    title: "@Session["message"].ToString()",
                    html: 'Este Mensaje se cerrar en <strong></strong> segundos.',
                    type: 'success',
                    showConfirmButton: true,
                    width: 700,
                    padding: '3em',
                    timer: 6000,
                    /*onBeforeOpen: () => {
                        Swal.showLoading()
                        timerInterval = setInterval(() => {
                            Swal.getContent().querySelector('strong')
                                .textContent = Swal.getTimerLeft()
                        }, 100)
                    },
                    backdrop: false,
                    onClose: () => {
                    }*/
                });
            </script>
        }
        Session.Remove("message");
    }
}
