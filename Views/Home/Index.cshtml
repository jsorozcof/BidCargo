@{
    ViewBag.Title = "Home Page";
}

<div class="slide-one-item home-slider owl-carousel">

    <div class="site-blocks-cover overlay" style="background-image: url(/Content/images/hero_bg_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">

                <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">


                    <h1 class="text-white font-weight-light">Qué es BidCargo</h1>
                    <p class="mb-5">
                        Plataforma Tecnológica de Negocio, a través de la cual interactúan y negocian Generadores y Proveedores de Servicio relacionados con el transporte de Carga.
                    </p>

                    <div class="d-flex justify-content-center ">
                        <div class="dropdown-bidcargo">
                            <a class="btn btn-primary py-3 px-5 text-white">Regístrate!</a>
                            <ul>
                                <li><a href=@Url.Action("registroInicial", "Home")><i class="fas fa-building"></i> Empresa</a></li>
                                <li><a href="@Url.Action("PreRegistro", "Propietario")"><i class="fas fa-user-tie"></i>  Propietario</a></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="site-blocks-cover overlay" style="background-image: url(/Content/images/hero_bg_2.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">

                <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                    <h1 class="text-white font-weight-light">Por qué BidCargo</h1>
                    <p class="mb-5">Generamos economía a todos los stakeholders del gremio transportador.</p>

                    <div class="d-flex justify-content-center ">
                        <div class="dropdown-bidcargo">
                            <a class="btn btn-primary py-3 px-5 text-white">Regístrate!</a>
                            <ul>
                                <li><a href=@Url.Action("registroInicial", "Home")><i class="fas fa-building"></i> Empresa</a></li>
                                <li><a href="@Url.Action("PreRegistro", "Propietario")"><i class="fas fa-user-tie"></i>  Propietario</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<div class="site-section">

    <div class="container overlap-section">
        <div class="row">
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <a href="#" class="unit-1 text-center">
                    <img src="/Content/images/img_1.jpg" alt="Image" class="img-fluid">
                    <div class="unit-1-text">
                        <h3 class="unit-1-heading">Ahorras dinero</h3>
                    </div>
                </a>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <a href="#" class="unit-1 text-center">
                    <img src="/Content/images/img_3.jpg" alt="Image" class="img-fluid">
                    <div class="unit-1-text">
                        <h3 class="unit-1-heading">Te conectamos a la carga</h3>
                    </div>
                </a>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <a href="#" class="unit-1 text-center">
                    <img src="/Content/images/img_2.jpg" alt="Image" class="img-fluid">
                    <div class="unit-1-text">
                        <h3 class="unit-1-heading">Protegemos tu mercancía</h3>
                    </div>
                </a>
            </div>
        </div>
    </div>

</div>


<div class="site-section">
    <div class="container">
        <div class="row align-items-stretch">
            <div class="col-md-12 col-lg-3 mb-3 mb-lg-0">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon me-4"><span class="color-icono-bidcargo icon-monetization_on"></span></div>
                    <div>
                        <h3>Mejor Precio</h3>
                        <p>
                            Buscamos el mejor precio del mercado para que transportes tu carga.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-lg-3 mb-3 mb-lg-0">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon me-4"><span class="color-icono-bidcargo icon-add_location"></span></div>
                    <div>
                        <h3>Donde te Encuentras</h3>
                        <p>
                            Buscamos tu mejor aliado en donde te encuentras, ya seas un generador de carga o un
                            proveedor de servicios.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-lg-3 mb-3 mb-lg-0">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon me-4"><span class="color-icono-bidcargo icon-chain"></span></div>
                    <div>
                        <h3>Ahorramos</h3>
                        <p>
                            Te ubicamos carga para que no vuelvas vacío a tu origen y reduzcas costos de
                            transporte, garantizando la facturación.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-lg-3 mb-3 mb-lg-0">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon me-4"><span class="color-icono-bidcargo icon-handshake-o"></span></div>
                    <div>
                        <h3>Factoring</h3>
                        <p>
                            Ofrecemos alternativas para recuperación de cartera en menor tiempo.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



<div class="site-blocks-cover overlay inner-page-cover" style="background-image: url(/Content/images/hero_bg_2.jpg); background-attachment: fixed;">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-7" data-aos="fade-up" data-aos-delay="400">
                <a href="https://www.youtube.com/watch?v=b2VEW1ShQfE" class="play-single-big mb-4 d-inline-block popup-vimeo"><span class="icon-play"></span></a>
                <h2 class="text-white font-weight-light mb-5 h1">Conoce un poco más de BidCargo</h2>

            </div>
        </div>
    </div>
</div>

