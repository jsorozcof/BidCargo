                        <ul>
                            <li><a href=@Url.Action("registroInicial", "Home")><i class="fas fa-building"></i> Empresa</a></li>
                            <li><a href="@Url.Action("PreRegistro", "Propietario")"><i class="fas fa-user-tie"></i>  Propietario</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

