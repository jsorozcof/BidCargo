@model BidCargo_.Models.ConductorFileInputModel

<div class="site-blocks-vs inner-page-cover" style="background-image: url(/Content/images/hero_bg_3.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <br /><br />
                <h1 class="text-white font-weight-light">Con estos datos te contactamos</h1>
                <br /><br />
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("GuardarArchivos", "Conductor", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();

    <div class="container">
        <div class="card shadow-lg mb-5 mt-5 bg-white rounded p-3 ">
            <div class="row">
                <div class="col-md w-100 h-100">
                    <div class="card-title row mt-3 text-center">
                        <h1>Conductor</h1>
                    </div>
                    <hr />
                    <div class="card-body bg-ligth-bidcargo">
                        <div class="text-center mt-5 mb-5">
                            <h5 class="mb-4">
                                <b>Nombre: </b><small>@ViewBag.conductorView.nombre</small>
                            </h5>
                            <h5 class="mb-4">
                                <b>Apellido:</b> <small>@ViewBag.conductorView.apellido</small>
                            </h5>
                            <h5 class="mb-4">
                                <b>Teléfono:</b> <small>@ViewBag.conductorView.telefonoMovil</small>
                            </h5>
                            <h5 class="mb-4">
                                <b> Tipo de documento: </b><small>@ViewBag.conductorView.nombreTipoDocumento</small>
                            </h5>
                            <h5 class="mb-4">
                                <b>Nro de identificación:</b> <small>@ViewBag.conductorView.numeroDocumento</small>
                            </h5>
                            <h5 class="mb-4">
                                <b>Correo electrónico:</b> <small>@ViewBag.conductorView.correo</small>
                            </h5>
                        </div>
                    </div>
                </div>
                <div class="col-md w-100 h-100">
                    <div class="card-title mt-3 text-center">
                        <h1>Soportes</h1>
                    </div>
                    <hr />
                    <div class="card-body">
                        <div class="mb-4">
                            <div class="mb-3">
                                <label for="formFileCC" class="form-label">Cédula de ciudadanía</label>
                                @Html.TextBoxFor(model => model.cedula, new { @class = "form-control", type = "file", id = "formFileCC", accept = ".pdf" })
                                @Html.ValidationMessageFor(model => model.cedula, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="formFileLC" class="form-label">Licencia de conducción</label>
                                @Html.TextBoxFor(model => model.licencia, new { @class = "form-control", type = "file", id = "formFileLC", accept = ".pdf" })
                                @Html.ValidationMessageFor(model => model.licencia, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="formFileSC" class="form-label">Planilla de pago de seguridad social</label>
                                @Html.TextBoxFor(model => model.seguridadSocial, new { @class = "form-control", type = "file", id = "formFileSC", accept = ".pdf" })
                                @Html.ValidationMessageFor(model => model.seguridadSocial, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="formFileCS" class="form-label">Cursos</label>
                                @Html.TextBoxFor(model => model.cursos, new { @class = "form-control", type = "file", id = "formFileCS", accept = ".pdf" })
                                @Html.ValidationMessageFor(model => model.cursos, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row form-group mt-4 me-2 mb-3">
                <div class="col-md-12 d-flex justify-content-end">
                    <input type="submit" id="guardar" value="Enviar" class="btn btn-primary py-2 px-4 text-white js-addcart-detail js-show-modal1">
                </div>
            </div>
        </div>
    </div>
}

@section  scripts{
    @if (Session["message"] != null)
    {
        if (Session["message"].ToString() != "")
        {
            <script type="text/javascript">
                Swal.fire({
                    title: "Mensaje",
                    html: "@Session["message"].ToString()",
                    type : '@Session["type"].ToString()',
                    showConfirmButton: true,

                });
            </script>
        }
        Session.Remove("message");
        Session.Remove("type");
    }
}
